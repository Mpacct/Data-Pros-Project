<div class="container-fluid"> <!--Mobile responsiveness-->
    <div class="row">
      <div class="col-lg-8 col-md-6 col-sm-12" id="sign">
        <div class="card mx-auto">
          <h1>Add Event</h1>
          <form id="signup-form" method="POST">
            <div>
              <div class="col-lg-6 col-md-6 col-sm-12 card mx-auto">
                <div class="mb-3">
                  <label for="title" class="form-label">Event Name</label>
                  <div><input type="text" class="form-control" id="title" name="title" required></div>
                </div>

                <div class="mb-3">
                  <label for="date" class="form-label">Date</label>
                  <div><input type="text" class="form-control" id="date" name="date" required></div>
                </div>

                <div class="mb-3">
                  <label for="time" class="form-label">Time</label>
                  <div><input type="text" class="form-control" id="time" name="time" required></div>
                </div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-12 card mx-auto">
                <div class="mb-3">
                  <label for="description" class="form-label">Description</label>
                  <div><input type="text" class="form-control trial" id="description" name="description" required></div>
                </div>

              </div>
            </div>
  
            <button type="submit" class="btn btn-primary">Save Event</button>
  
            </form>
          </div>
        </div>
      </div>
    </div>
